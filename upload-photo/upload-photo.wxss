@import '/app.wxss';

.upload{
	padding-bottom: 7.5rpx;
}

.upload .title.required:before {
  display: inline-block;
  margin-right: 8rpx;
  content: '*';
  font-family: SimSun,sans-serif;
  line-height: 1;
  font-size: 28rpx;
  color: #f5222d;
}

.upload .title .tip{
  margin-left: 20rpx;
  color: rgba(0,0,0,.4);
}

.upload .content{
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
}

.upload .content .img{
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 22.5rpx;
}

.upload .content .img image{
  height: 100%;
  width: 100%;
}

.upload .btn{
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 120rpx;
  width: 120rpx;
  margin-bottom: 22.5rpx;
  background-image: url('data:image/png;base64,');
  background-size: cover;
}

.upload .btn .plus{
  position: relative;
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
}
.upload .btn .plus::before,
.upload .btn .plus::after{
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background: rgba(0,0,0,.4);
}

.upload .btn .plus::after{
  height: 25rpx;
  width: 2rpx;
}

.upload .btn .plus::before{
  width: 25rpx;
  height: 2rpx;
}

.upload .btn .text{
  font-size: 24rpx;
  color: rgba(0,0,0,.4);
}

.upload .btn .line-h{
  position: absolute;
  background-image: linear-gradient(to right, #ccc 0%, #ccc 50%, #fff 50%);
  background-size: 32rpx 2rpx;
  background-repeat: repeat-x;
  width: 100%;
  height: 1rpx;
}

.upload .btn .line-v{
  position: absolute;
   background-image: linear-gradient(to bottom, #ccc 0%, #ccc 50%, transparent 50%);
  background-size: 2rpx 32rpx;
  background-repeat: repeat-y;
  height: 100%;
  width: 1rpx;
}

.upload .btn .line-h-t{
  top: 0;
}

.upload .btn .line-h-b{
  bottom: 0;
}

.upload .btn .line-v-l{
  top: 0;
  left: 0;
}

.upload .btn .line-v-r{
  top: 0;
  right: 0;
}

.upload .tip{
  color: rgba(0,0,0,.4);
}